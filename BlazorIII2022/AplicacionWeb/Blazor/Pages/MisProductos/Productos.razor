@page "/Productos"
@using Modelos;

<AuthorizeView Roles="Administrador">

	<Authorized Context="AuthenticationState">
		<h3>Lista de Productos</h3>
		<div class="form-group row">
			<div class="col-sm-10">
				<a href="/Productos/Nuevo" class="btn btn-primary m-1">Nuevo Producto</a>
			</div>
		</div>

		@if (listaProducto == null)
		{
			<p>No existen productos en el sistema</p>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Código</th>
						<th>Descripción</th>
						<th>Existencia</th>
						<th>Precio</th>
						<th>Fecha Creacion</th>
						<th>Imagen</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var producto in listaProducto)
					{
						<tr>
							<td>@producto.Codigo</td>
							<td>@producto.Descripcion</td>
							<td>@producto.Existencia</td>
							<td>@producto.Precio</td>
							<td>@producto.FechaCreacion</td>
							<td>@producto.Imagen</td>
							
							<th>
								<a class="btn btn-success" href="@($"/Productos/Editar/{producto.Codigo}")">Editar</a>
							</th>
						</tr>
					}

				</tbody>

			</table>
		}


	</Authorized>


</AuthorizeView>
